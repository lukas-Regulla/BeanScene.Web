@model BeanScene.Web.Models.AssignTablesViewModel

@{
    ViewData["Title"] = "Assign Tables";
}

<h2>Assign Tables to Reservation</h2>

<div class="card p-3 mb-4">
    <h4>Reservation Details</h4>

    <p><strong>Guest Name:</strong> @Model.GuestName</p>
    <p><strong>Guests:</strong> @Model.NumOfGuests</p>
    <p><strong>Sitting:</strong> @Model.SittingName</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-action="AssignTables" method="post">
    <input type="hidden" name="ReservationId" value="@Model.ReservationId" />

    <div class="card p-3">
        <h4>Select Tables</h4>

        <p>
            Choose one or more tables for this reservation.<br />
            The total seating must cover <strong>@Model.NumOfGuests guests</strong>.
        </p>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Select</th>
                        <th>Table Name</th>
                        <th>Seats</th>
                        <th>Area</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var t in Model.AvailableTables)
                    {
                        bool isAssigned = Model.SelectedTableIds.Contains(t.RestaurantTableId);

                        <tr>
                            <td>
                                <input type="checkbox"
                                       name="SelectedTableIds"
                                       value="@t.RestaurantTableId"
                                       @(isAssigned ? "checked" : "") />
                            </td>

                            <td>@t.TableName</td>
                            <td>@t.Seats</td>
                            <td>@t.Area?.AreaName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (TempData["SeatError"] != null)
    {
        <script>
            alert('@TempData["SeatError"]');
        </script>
    }


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Assignments</button>
        <a asp-action="Index" class="btn btn-secondary">Back to Reservations</a>
    </div>
</form>
