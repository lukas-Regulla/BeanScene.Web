@model IEnumerable<BeanScene.Web.Models.Reservation>

<h2 class="mt-3">My Reservations</h2>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Date</th>
            <th>Guests</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.StartTime.ToString("dddd, dd MMM yyyy hh:mm tt")</td>
                <td>@r.NumOfGuests</td>
                <td>@r.Status</td>

                <td>
                    @if (r.Status == "Pending")
                    {
                        <a asp-action="Edit"
                           asp-route-id="@r.ReservationId"
                           class="btn btn-sm btn-warning">
                            Edit
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Confirmed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-secondary">
        ← Back to Home
    </a>
</div>
