@model BeanScene.Web.Models.ViewModels.DashboardViewModel

<h1 class="mt-3">Reservation Dashboard</h1>
<p class="text-muted">Overview of today's and overall reservation activity</p>

<div class="row mt-4">

    <!-- Today's Reservations -->
    <div class="col-md-3">
        <div class="card shadow-sm border-primary">
            <div class="card-body text-center">
                <h4 class="text-primary">Today</h4>
                <h2>@Model.TotalToday</h2>
            </div>
        </div>
    </div>

    <!-- Pending Today -->
    <div class="col-md-3">
        <div class="card shadow-sm border-warning">
            <div class="card-body text-center">
                <h4 class="text-warning">Pending Today</h4>
                <h2>@Model.PendingToday</h2>
            </div>
        </div>
    </div>

    <!-- Confirmed Today -->
    <div class="col-md-3">
        <div class="card shadow-sm border-success">
            <div class="card-body text-center">
                <h4 class="text-success">Confirmed Today</h4>
                <h2>@Model.ConfirmedToday</h2>
            </div>
        </div>
    </div>

    <!-- Cancelled Today -->
    <div class="col-md-3">
        <div class="card shadow-sm border-danger">
            <div class="card-body text-center">
                <h4 class="text-danger">Cancelled Today</h4>
                <h2>@Model.CancelledToday</h2>
            </div>
        </div>
    </div>
</div>

<hr class="my-5" />

<!-- Overall Stats -->
<div class="row mt-4">

    <div class="col-md-6">
        <div class="card shadow-sm border-warning">
            <div class="card-body text-center">
                <h4 class="text-warning">Overall Pending</h4>
                <h2>@Model.OverallPending</h2>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm border-success">
            <div class="card-body text-center">
                <h4 class="text-success">Overall Confirmed</h4>
                <h2>@Model.OverallConfirmed</h2>
            </div>
        </div>
    </div>

</div>

<div class="mt-4">
    <a class="btn btn-primary" asp-controller="Reservations" asp-action="Index">Go to Reservations</a>
</div>
