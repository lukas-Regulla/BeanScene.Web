@model BeanScene.Web.Models.DoublyLinkedListViewModel

@{
    ViewData["Title"] = "Doubly Linked List Demonstration";
}

<h2>Doubly Linked List Demonstration</h2>

<div class="card p-4">

    <form method="post">
        <div class="form-group mb-3">
            <label>Enter numbers (comma separated)</label>
            <input asp-for="NumbersInput" class="form-control" placeholder="e.g. 5,3,12,11,7" />
        </div>

        <button type="submit" class="btn btn-primary">Build Linked List</button>
    </form>

    @if (Model != null && !string.IsNullOrWhiteSpace(Model.ForwardResult))
    {
        <hr />
        <h4>Forward Traversal</h4>
        <p>@Model.ForwardResult</p>

        <h4>Backward Traversal</h4>
        <p>@Model.BackwardResult</p>
    }

</div>
